class Solution(object):
    def isPowerOfTwo(self, n):
        """
        :type n: int
        :rtype: bool
        """
        if n<0:
            return False
        str = bin(n)[2:]
        sub = '1'
        ans = str.count(sub)
        return ans == 1
################################################################################
     return n&(n-1) == 0
